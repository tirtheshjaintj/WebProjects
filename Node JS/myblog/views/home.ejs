<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
       <%- include('./partials/head'); %>
       <style>
        body{
            background:#222;
        }
       </style>
</head>
<body>
    <%- include('./partials/navbar'); %>
    <div class="container p-5 text-light">
        <% if(locals.user){ %>
    <h2>Welcome <%=user.name %></h2>
    <% } else{ %>
    <h1>Welcome To My Blog</h1>
    <% } %>

</div>
<div class="container" >
    <div class="row p-2 justify-content-start" >
<% if(locals.blogs){
blogs.map((blog)=>{
%>
<div class="col-md-3">
<div class="card my-2">
  <img src="<%= blog.coverImageURL %>" style="width:100%;height:200px" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= blog.title %></h5>
    <p class="card-text"><%= blog.body.slice(0,50)+"..." %></p>
    <h6 class="card-title">Posted By: <img src="<%= blog.createdBy.profile_image %>" style="width:40px;" alt=""> <%= blog.createdBy.name %></h6>
    <a href="/blog/<%= blog._id %>" class="btn btn-primary">View Blog</a>
  </div>
</div>
</div>
<%
})
} %>

</div>
</div>
    <%- include('./partials/scripts'); %>
</body>
</html>